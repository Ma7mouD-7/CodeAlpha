<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_category_list_cover_iv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/item_category_list_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/item_category_list_name_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sc"
            android:gravity="center"
            android:maxLines="1"
            android:padding="4dp"
            android:singleLine="false"
            tools:text="Short Stories"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_category_list_cover_iv" />

        <TextView
            android:id="@+id/item_category_list_desc_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/md_grotesk_regular"
            android:gravity="start|center_vertical"
            android:padding="8dp"
            tools:text="Meant to cause discomfort and fear for both characters and readers, by making use of supernatural elements in morbid stories that maybe realistic"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_category_list_name_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_category_list_name_tv"
            app:layout_constraintTop_toTopOf="@+id/item_category_list_cover_iv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>