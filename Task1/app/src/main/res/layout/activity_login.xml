<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="login_tn"
    android:background="@drawable/layered_waves_haikei__2_"
    android:paddingHorizontal="@dimen/horizontal_padding"
    android:focusableInTouchMode="true">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:fontFamily="@font/alegreya_sc_bold"
        android:text="Login"
        android:textColor="@color/primary_color"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_email_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/email_hint"
        android:paddingHorizontal="1dp"
        android:textColorHint="@color/on_secondary_color"
        app:boxBackgroundColor="@color/primary_variant_color"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@color/secondary_variant_color"
        app:boxStrokeErrorColor="@color/error"
        app:boxStrokeWidth="0.5dp"
        app:boxStrokeWidthFocused="1dp"
        app:errorIconTint="@color/error"
        app:errorTextColor="@color/error"
        app:helperText="We'll sent a verification email"
        app:hintEnabled="true"
        app:hintTextColor="@color/secondary_variant_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:placeholderText="you@mail.com"
        app:placeholderTextColor="@color/on_secondary_color"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconMinSize="40dp"
        app:startIconScaleType="centerInside"
        app:startIconTint="@drawable/textinput_icon_selector">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/md_grotesk_regular"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@color/on_variant_color"
            android:textSize="14sp"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_password_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/password_hint"
        android:textColorHint="@color/on_secondary_color"
        app:boxBackgroundColor="@color/primary_variant_color"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@color/secondary_variant_color"
        app:boxStrokeErrorColor="@color/error"
        app:boxStrokeWidth="0.5dp"
        app:boxStrokeWidthFocused="1dp"
        app:errorIconTint="@color/error"
        app:errorTextColor="@color/error"
        app:hintEnabled="true"
        app:hintTextColor="@color/secondary_variant_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email_layout"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@drawable/textinput_icon_selector"
        app:startIconDrawable="@drawable/ic_password"
        app:startIconMinSize="40dp"
        app:startIconScaleType="centerInside"
        app:startIconTint="@drawable/textinput_icon_selector">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/md_grotesk_regular"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingEnd="24dp"
            android:textColor="@color/on_variant_color"
            android:textSize="14sp"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/login_forgot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/md_grotesk_regular"
        android:padding="8dp"
        android:text="@string/forgot_password"
        android:textAlignment="gravity"
        android:textColor="@color/secondary_variant_color"
        android:textSize="12sp"
        android:textStyle="bold"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/register_password_layout"
        app:layout_constraintTop_toBottomOf="@+id/register_password_layout" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_submit_btn"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_button_bk"
        android:fontFamily="@font/alegreya_sc_bold"
        android:text="Login"
        android:textColor="@color/primary_variant_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/register_password_layout"
        app:layout_constraintTop_toBottomOf="@+id/login_forgot_tv" />

    <TextView
        android:id="@+id/login_signup_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_horizontal"
        android:fontFamily="@font/md_grotesk_regular"
        android:paddingVertical="16dp"
        android:text="@string/login_signup_hint"
        android:textAlignment="center"
        android:textColor="@color/secondary_variant_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/login_submit_btn"
        app:layout_constraintStart_toStartOf="@+id/login_submit_btn"
        app:layout_constraintTop_toBottomOf="@+id/login_submit_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>